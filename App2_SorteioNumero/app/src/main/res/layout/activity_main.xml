<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strGerador"
            android:textSize="16sp"
            android:id="@+id/numbergenerator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="83dp"
            app:layout_constraintEnd_toEndOf="parent">
    </TextView>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/strReticencias"
              android:textSize="19sp"
              android:id="@+id/txtnumeros"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/numbergenerator"
              android:layout_marginTop="85dp"
              app:layout_constraintEnd_toEndOf="parent">
    </TextView>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strGerar"
            android:textSize="15sp"
            android:id="@+id/btngerar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtnumeros"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>