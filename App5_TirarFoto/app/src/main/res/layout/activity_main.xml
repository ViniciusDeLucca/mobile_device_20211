<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="86dp"
            tools:layout_editor_absoluteX="141dp"
            tools:ignore="ContentDescription"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtCadastro"
            android:id="@+id/cadastro"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.352"
            app:layout_constraintHorizontal_bias="0.482"/>
    <TextView
            android:text="@string/txtNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/digiteNome"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cadastro"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="334dp"
            tools:layout_editor_absoluteX="173dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/inputNome"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/digiteNome"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="@string/hintNome"
            android:autofillHints="@string/hintNome"
            tools:layout_editor_absoluteY="370dp"
            tools:layout_editor_absoluteX="104dp"/>
    <Button
            android:text="@string/txtBtnFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFoto"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/inputNome"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="456dp"
            tools:layout_editor_absoluteX="161dp"/>
    <Button
            android:text="@string/txtBtnSalvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSalvar"
            app:layout_constraintTop_toBottomOf="@+id/btnFoto"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="80dp"
            tools:layout_editor_absoluteY="520dp"
            tools:layout_editor_absoluteX="161dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>